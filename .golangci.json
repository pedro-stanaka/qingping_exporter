{
	"run": {
		"tests": true,
		"timeout": "10m0s",
		"allow-parallel-runners": true
	},
	"linters": {
		"enable": [
			"revive",
			"govet",
			"staticcheck",
			"errcheck",
			"gocyclo",
			"gofmt",
			"gci",
			"errname"
		],
		"gci": {
			"sections": ["standard", "default", "localmodule"]
		}
	},
	"linters-settings": {
		"errcheck": {
			"exclude-functions": [
				"(github.com/go-kit/log.Logger).Log"
			]
		}
	},
	"fast": true
}
